# ============================================
# SIKERMA Environment Configuration
# ============================================
# Copy file ini ke .env dan sesuaikan nilai
#
# üîê SECURITY NOTE:
# Untuk development, jalankan: ./docker/secrets/generate-secrets.sh
# File secrets akan di-generate di docker/secrets/
# ============================================

# ============================================
# Database Configuration
# ============================================
# Credentials dibaca dari Docker Secrets
# Untuk development tanpa Docker, gunakan credentials dari docker/secrets/
DATABASE_URL=postgresql://sikerma_admin:CHANGE_ME@localhost:5435/db_master
DATABASE_KEPEGAWAIAN_URL=postgresql://sikerma_admin:CHANGE_ME@localhost:5435/db_kepegawaian

# ============================================
# Keycloak Configuration
# ============================================
KEYCLOAK_URL=http://localhost:8081
KEYCLOAK_REALM=pengadilan-agama

# Client IDs
KEYCLOAK_CLIENT_ID_PORTAL=portal-client
KEYCLOAK_CLIENT_ID_MASTER=master-data-client
KEYCLOAK_CLIENT_ID_KEPEGAWAIAN=kepegawaian-client

# Client Secrets - Ganti dengan nilai yang sesuai
# Lihat: docker/secrets/keycloak_*_secret.txt setelah menjalankan generate-secrets.sh
KEYCLOAK_CLIENT_SECRET_PORTAL=CHANGE_ME_FROM_SECRETS
KEYCLOAK_CLIENT_SECRET_MASTER=CHANGE_ME_FROM_SECRETS
KEYCLOAK_CLIENT_SECRET_KEPEGAWAIAN=CHANGE_ME_FROM_SECRETS

# ============================================
# Backend API Configuration
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3003/api/v1
API_URL=http://localhost:3003/api/v1

# ============================================
# Gotenberg Configuration (PDF Generation)
# ============================================
GOTENBERG_URL=http://localhost:3100

# ============================================
# DragonflyDB / Redis Configuration
# ============================================
DRAGONFLY_URL=redis://localhost:6379
DRAGONFLY_PASSWORD=CHANGE_ME_FROM_SECRETS

# ============================================
# PM2 / Port Configuration
# ============================================
PORTAL_PORT=3000
MASTER_DATA_PORT=3001
KEPEGAWAIAN_PORT=3002
BACKEND_PORT=3003

# ============================================
# Application Configuration
# ============================================
NEXT_PUBLIC_APP_NAME="SIKERMA"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# Security Configuration
# ============================================
# CSRF protection
CSRF_SECRET=CHANGE_ME_TO_RANDOM_STRING

# Rate limiting
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_LOGIN=5
RATE_LIMIT_UPLOAD=10

# Environment
NODE_ENV=development
