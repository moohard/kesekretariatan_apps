{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "pnpm",
  "testRunner": "vitest",
  "vitest": {
    "configFile": "vitest.config.ts"
  },
  "coverageAnalysis": "perTest",
  "mutate": [
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "!**/*.test.ts",
    "!**/*.spec.ts",
    "!**/*.config.*",
    "!**/types/**",
    "!**/__tests__/**"
  ],
  "thresholds": {
    "high": 90,
    "low": 70,
    "break": 80
  },
  "reporters": [
    "html",
    "clear-text",
    "progress",
    "json"
  ],
  "concurrency": 4,
  "timeoutMS": 60000,
  "timeoutFactor": 2.5,
  "ignoreStatic": true,
  "dashboard": {
    "project": "github.com/sikerma/kesekretariatan-apps",
    "version": "main"
  },
  "checker": "typescript",
  "tsconfigFile": "tsconfig.json"
}
